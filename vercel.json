{
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/diagnose", "dest": "/api/diagnose/index.py" },
    { "src": "/api/hello", "dest": "/api/hello.py" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}
